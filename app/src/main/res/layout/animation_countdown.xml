<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    xmlns:motion = "http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <Transition
        motion:constraintSetStart="@+id/starting_set"
        motion:constraintSetEnd="@+id/ending_set"
        motion:duration="3000"
        tools:ignore = "MissingPrefix">

        <KeyFrameSet>

            <KeyPosition
                motion:target="@+id/TextViewCountdown"
                motion:keyPositionType="parentRelative"/>

            <KeyAttribute
                motion:target="@+id/TextViewCountdown"
                android:text="1"
                android:textSize="128sp"
                android:textColor="@color/CountdownColour"/>

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/starting_set">

        <Constraint
            android:id="@+id/TextViewCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="1"
            android:textSize="0sp"
            android:textColor="@color/CountdownColourTransparent"
            android:gravity="center"/>

    </ConstraintSet>


    <ConstraintSet android:id="@+id/ending_set">

        <Constraint
            android:id="@+id/TextViewCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore = "DuplicateIds"
            android:text="3"
            android:textColor="@color/CountdownColour"
            android:textSize="128sp"
            android:gravity="center"/>

    </ConstraintSet>


</MotionScene>